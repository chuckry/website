.content_edit
	height auto
	width 100%
	margin-left auto
	margin-right auto
	background: url('/img/husk.png') repeat;
	h2
		color gray
		text-shadow 1px 1px 1px #222
		padding 2em
		font-size 2em
	form
		p
			color #2C2313
			padding 1em
		input
			padding 10px
		input:focus 
			box-shadow 0px 0px 3px 1px #19ff19
		textarea
			padding 1em
			//font-family arial
			margin 1em
		textarea:focus
			box-shadow 0px 0px 3px 1px #19ff19
		

	color #2C2313
	.info
		width 100%
	.describe
		p
			display inline-block
			text-align left
			width 8em
		input
			display inline-block
		.data
			display block
	.designButton
		border-radius 5px
		font-size 1em
		width 10em
		height 3em
		color white
		background #99CCFF
		margin 10px
	.designButton:hover
		background #336699
