// put profile styling here
.content
    height 100%
    background: url('/img/husk.png') repeat;
    .firstWrapper
        height 30em
        // .userImage
        .rectangleInfo
            width 40%
            height 20em
            margin 5%
            border-radius: 15px;
            h2
                margin-top .5em
                margin-bottom .5em
                font-size 2em
            .info
                width 40%
                margin 0% 5% 5% 5%
                float left
                p
                    margin-bottom 1em
                    font-size 1.3em
                    text-align left
            .data
                p
                    text-align center
        .personal
            float left
            background-color #27637C
            color #CDCDCD
        .fraternity
            float right
            background-color #B4DCED
    .bio
        width 40em
        min-height 5em
        height auto
        margin-left auto
        margin-right auto
        border-radius: 15px;
        background-color rgba(181, 181, 181, 0.74)
        p
            margin-top .6em


@media screen and (max-width: 600px)
    .firstWrapper
        height auto!important
        .personal, .fraternity
            float none!important
            display block
            width 100% !important
            margin 0!important
    .bio
        width 100%!important
        margin-top 1em