extends main
block content
    h2= 'Pitcher: ' + member.first_name + ' ' + member.last_name
    h2= 'Title: ' + pitch.title
    h2= 'Description:'
    p= pitch.description
    form(action='/app/pitch/'+pitch._id+'/vote',method='POST',id='voteForm')
        input(type='hidden',name=member._id)
        h2 Innovation:
        select(name='innovationScore',form='voteForm')
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
            option(value='7') 7
            option(value='8') 8
            option(value='9') 9
            option(value='10') 10
        h2 Usefulness:
        select(name='usefulnessScore',form='voteForm')
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
            option(value='7') 7
            option(value='8') 8
            option(value='9') 9
            option(value='10') 10
        h2 Coolness:
        select(name='coolnessScore',form='voteForm')
            option(value='1') 1
            option(value='2') 2
            option(value='3') 3
            option(value='4') 4
            option(value='5') 5
            option(value='6') 6
            option(value='7') 7
            option(value='8') 8
            option(value='9') 9
            option(value='10') 10
        p= 'vote cast by: ' + member.first_name + ' ' + member.last_name
        input(type='submit',value='Send')